<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ui_componanets.widgets.CustomRecyclerView
        android:id="@+id/rv_pay_roll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/widget_padding"

        app:orientation="vertical" />

    <ProgressBar
        android:id="@+id/payroll_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/no_pay_roll_stats_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/currently_no_pay_roll_available"
        android:textSize="@dimen/title_head"
        android:layout_gravity="center"
        android:textAlignment="center"
        tools:visibility="visible"
        android:visibility="gone"/>
</FrameLayout>