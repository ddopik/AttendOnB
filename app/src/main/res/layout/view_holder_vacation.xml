<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/grayC3CDD5"
    android:gravity="start"
    android:orientation="horizontal"
    android:padding="@dimen/widget_padding">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_pending" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="start"
        android:orientation="vertical"
        android:padding="4dp">


        <TextView
            android:id="@+id/vacation_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_head"
            android:textStyle="bold"
            tools:text="vacation reason" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_date" />


        <TextView
            android:id="@+id/vacation_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2-11-2019" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/end_date" />

        <TextView
            android:id="@+id/vacation_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="5-11-2019" />
    </LinearLayout>

    <TextView
        android:id="@+id/vacation_day_count"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/widget_padding"
        android:layout_marginRight="@dimen/widget_padding"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/title_sub_head"
        tools:text="5 days" />


</LinearLayout>