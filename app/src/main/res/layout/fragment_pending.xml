<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <ui_componanets.widgets.CustomRecyclerView
        android:id="@+id/rv_pending_vacation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:orientation="vertical" />

    <TextView
        android:id="@+id/no_pending_vacation_stats_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/no_pending_vacations"
        android:textAllCaps="false"
        android:visibility="gone"
        android:textSize="@dimen/title_head" />
    <ProgressBar
        android:id="@+id/pr_pending_vacation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />


</FrameLayout>